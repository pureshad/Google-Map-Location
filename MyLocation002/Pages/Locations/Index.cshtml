@page "{id?}/{handler?}"
@model MyLocation002.Pages.Locations.IndexModel
@{
    ViewData["Title"] = "Index";
}
<br />
<h2 class="col-sm-offset-5">Locations Page</h2>
<br />

@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}
<hr />

<div class="container">
    <div class="form-border">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Locations[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Locations[0].Adress)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Locations[0].Category.DisplayCategory)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Locations[0].Latitude)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Locations[0].Longitude)
                </th>
            </tr>

            @foreach (var location in Model.Locations)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(w => location.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(w => location.Adress)
                    </td>
                    <td>
                        @Html.DisplayFor(w => location.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(w => location.Latitude)
                    </td>
                    <td>
                        @Html.DisplayFor(w => location.Longitude)
                    </td>
                    <td>
                        @Html.Partial("_TableButtonsPartital", new Data.Models.IndevidualButtonPartitial { Id = location.Id })
                    </td>

                </tr>
            }
        </table>
        <p>
            <a asp-page="Create" type="button" class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-plus">&nbsp;Create New</span>
            </a>
            <a asp-page-handler="sortbyalphabet" type="button" class="btn btn-success btn-sm">
                <span class="glyphicon glyphicon-sort">&nbsp;Sort By Adress</span>
            </a>
        </p>
    </div>
</div>