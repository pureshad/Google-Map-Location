@page
@model MyLocation002.Pages.Locations.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h2 class="col-sm-offset-5">Delete</h2>

@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="cencel">
            <span aria-hidden="true">&times;</span>
        </button>

        <button type="button" class="open" data-dismiss="alert" aria-label="confirm">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}


<form method="post">
    <div class="form-border">
        <input type="hidden" asp-for="Locations.Id" />
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="Locations.Name" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Locations.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="Locations.Adress" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Locations.Adress" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="Locations.CategoryId" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Locations.Category.Name" class="form-control" />
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <input type="submit" value="Delete"
                   @Html.ActionLink("", "Delete", new { id = Model.Locations.Id }, new { onclick = "return confirm('are you sure you want to delete this item?')", @class = "btn btn-sm btn-danger submit" })



            <a asp-page="Index" class="btn btn-sm btn-success">Back to list</a>
        </div>
    </div>
</form>
