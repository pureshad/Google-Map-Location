@page
@model MyLocation002.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}


<br />
<h2 class="col-sm-offset-5">Category Type</h2>
<br />

@if (Model.Message != null)
{
<div class="alert alert-info alert-dismissable" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="close">
        <span aria-hidden="true">&times;</span>
    </button>
    @Model.Message
</div>
}

<div class="form-border">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Categories[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Categories[0].DisplayCategory)
            </th>
            <th></th>
        </tr>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => category.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => category.DisplayCategory)
                </td>
                <td>
                    @Html.Partial("_TableButtonsPartital", new Data.Models.IndevidualButtonPartitial { Id = category.Id })
                </td>
            </tr>
        }
    </table>
</div>
<p>
    <a asp-page="Create" type="button" class="btn btn-primary btn-sm">
        <span class="glyphicon glyphicon-plus">&nbsp;Create New</span>
    </a>
</p>
